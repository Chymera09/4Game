<UserControl x:Class="_4Game.Pages.ResultSurface"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_4Game.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Label Content="{DynamicResource winner}" HorizontalContentAlignment="Center" Margin="10,10,10,240" VerticalContentAlignment="Center" Height="50"/>
        <Label Name="lblWinner" HorizontalAlignment="Left" Margin="10,66,0,159" HorizontalContentAlignment="Center" Width="280" VerticalContentAlignment="Center"/>
        <Label Name="lblResult" HorizontalAlignment="Left" Margin="10,146,0,0" VerticalAlignment="Top" Height="75" Width="280"/>
        <Button Name="btnClose" Content="{DynamicResource close}" HorizontalAlignment="Left" Margin="199,260,0,0" VerticalAlignment="Top" Width="75" Height="30" Click="btnClose_Click"/>
        <Button Name="btnNewGame" Content="{DynamicResource newgame}" HorizontalAlignment="Left" Margin="41,260,0,0" VerticalAlignment="Top" Width="75" Height="30" Click="btnNewGame_Click"/>


    </Grid>
</UserControl>
