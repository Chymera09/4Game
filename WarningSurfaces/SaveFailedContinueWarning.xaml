<UserControl x:Class="_4Game.WarningSurfaces.SaveFailedContinueWarning"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_4Game.WarningSurfaces"
             mc:Ignorable="d" 
              d:DesignHeight="150" d:DesignWidth="765" Height="150" Width="765">
    <Grid>
        <Label Content="{DynamicResource savefailed}" HorizontalContentAlignment="Center" 
               Margin="10,10,10,75" VerticalContentAlignment="Center" Height="65" FontSize="20"/>
        <DockPanel HorizontalAlignment="Left" Height="40" LastChildFill="False" Margin="247,100,0,0" VerticalAlignment="Top" Width="270">
            <Button Content="{DynamicResource continue}" Height="40" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.5,0.5" Click="Button_Click_1"/>
            <Separator Width="70" Background="Transparent"/>
            <Button Name="btnCancel" Content="{DynamicResource cancel}" Height="40" VerticalAlignment="Top" Width="100" Click="Button_Click"/>
        </DockPanel>
    </Grid>
</UserControl>
