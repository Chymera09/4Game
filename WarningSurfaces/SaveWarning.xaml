<UserControl x:Class="_4Game.WarningSurfaces.SaveWarning"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_4Game.WarningSurfaces"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="765" Height="150" Width="765">
    <Grid>
        <Label Content="{DynamicResource savewarningtext}" HorizontalContentAlignment="Center" 
               Margin="10,10,10,75" VerticalContentAlignment="Center" Height="65" FontSize="20"/>
        <DockPanel HorizontalAlignment="Left" Height="40" LastChildFill="False" Margin="217,100,0,0" VerticalAlignment="Top" Width="330">
            <Button Name="btnSave" Content="{DynamicResource save}" Height="40" VerticalAlignment="Top" Width="75" Click="btnSave_Click"/>
            <Separator Width="20" Background="Transparent"/>
            <Button Name="btnNoSave" Content="{DynamicResource dontsave}" Height="40" VerticalAlignment="Top" Width="140" Click="btnNoSave_Click"/>
            <Separator Width="20" Background="Transparent"/>
            <Button Name="btnCancel" Content="{DynamicResource cancel}" Height="40" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        </DockPanel>
    </Grid>
</UserControl>
