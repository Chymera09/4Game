<UserControl x:Class="_4Game.WarningSurfaces.LoadFailedWarning"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_4Game.WarningSurfaces"
             mc:Ignorable="d" 
              d:DesignHeight="150" d:DesignWidth="765" Height="150" Width="765">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="{DynamicResource loadfailed}" HorizontalContentAlignment="Center" Margin="10,10,10,0" VerticalContentAlignment="Center" Height="65" FontSize="20"/>
        <Button Content="{DynamicResource ok}" HorizontalAlignment="Center" Margin="313,25,313,0" Grid.Row="1" VerticalAlignment="Top"
                Width="140" Height="40" Click="Button_Click"/>

    </Grid>
</UserControl>
